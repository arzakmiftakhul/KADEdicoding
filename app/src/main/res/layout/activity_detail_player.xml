<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailPlayerActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/player_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_acm"/>
            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:layout_below="@+id/player_photo"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:layout_below="@+id/player_photo"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/weight_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60 kg"
                android:layout_below="@+id/weight"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_marginRight="16dp"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/height_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.73 m"
                android:layout_below="@+id/weight"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/player_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_position"
                android:text="desc"
                android:textSize="16sp"
                android:layout_margin="16dp"/>
            <TextView
                android:id="@+id/p_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="position"
                android:textSize="18sp"
                android:layout_margin="16dp"
                android:layout_below="@id/height_value"
                android:textColor="#000000"/>

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>